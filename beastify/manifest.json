{

  "manifest_version": 2,
  "name": "Beastify",
  "version": "1.0",

  "permissions": [
    "activeTab" 
  ],  

  "browser_action": {
    "default_icon": "button/beasts.png",
    "default_title": "Beastify",
    "default_popup": "popup/choose_beast.html"
  },
  
  "web_accessible_resources": [
    "beasts/*.jpg"
  ]

}
