{

  "manifest_version": 2,
  "name": "context-menu-demo",
  "version": "1.0",
  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "context-menu-demo@mozilla.org",
      "strict_min_version": "45.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },
  
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  
  "icons": {
    "16": "icons/page-16.png",
    "32": "icons/page-32.png",
    "48": "icons/page-48.png"
  }

}
